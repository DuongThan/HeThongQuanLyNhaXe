
@{
    ViewBag.Title = "Quản lý giá ghế";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            Quản lý giá ghế
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Quản lý giá ghế
                <div class="pull-right tableTools-container"></div>
            </div>
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Tên xe</th>
                            <th>Loại xe</th>
                            <th>Biển số</th>
                            <th>Giá người lớn</th>
                            <th>Giá trẻ em</th>
                            <th class="center">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 1; i < 20; i++)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">@i</label>
                                </td>
                                <td>
                                    <span>Tên xe @i</span>
                                </td>
                                <td>
                                    <span>Loại xe @i</span>
                                </td>
                                <td><span>Biển số @i</span></td>
                                <td><span>@i</span></td>
                                <td><span>@i</span></td>
                                <td class="center">
                                    <div class="action-buttons">
                                        <a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>

                                        <a class="green" href="#">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="#">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/dataTable.js"></script>